{
    "manifest_version": 3,
    "name": "Page Redirector",
    "version": "1.0",
    "description": "Redirects from specific pages to a new destination using declarativeNetRequest.",
    "permissions": [
        "declarativeNetRequest",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_title": "Page Redirector Options",
        "default_popup": "options_ui.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options_ui.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}